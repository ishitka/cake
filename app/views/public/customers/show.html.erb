<div class="container-fluid offset-1 mt-5" style="height: 600px;">
  <div class="row">
    <h4 class="bg-secondary text-center mb-5 ml-5">マイページ</h4>
  </div>
  <div class="row">
    <h5 class="font-weight-bold mr-3">登録情報</h5>
    <%= link_to "編集する",edit_customer_path ,class:"btn btn-success" %>
  </div>
  <div class="row col-6 mt-3">
    <table  class="table table-bordered">
      <tr>
        <td class="table-secondary">氏名</td>
        <td><%= @customer.first_name %><%= @customer.last_name %></td>
      </tr>
      <tr>
        <td class="table-secondary">カナ</td>
        <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
      </tr>
      <tr>
        <td class="table-secondary">郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td class="table-secondary">住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td class="table-secondary">電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td class="table-secondary">メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
    </table>
  </div>
  
  <div class="row col-3 my-3">
    <h5 class="font-weight-bold mr-3">配送先</h5>
    <div class="offset-1">
      <%= link_to "一覧を見る",addresses_path, class:"btn btn-primary" %>
    </div>
  </div>
   
  <div class="row col-3">
    <h5 class="font-weight-bold mr-3">注文履歴</h5>
    <%= link_to "一覧を見る",orders_path,class:"btn btn-primary" %>
  </div>
</div>