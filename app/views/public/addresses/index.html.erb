<h2>配送先登録/一覧</h2>
<%= form_with model: Address.new,url: addresses_path do |f| %>
<table>
  <tr>
    <td>郵便番号(ハイフンなし)</td>
    <td><%= f.text_field :postal_code, class: "form-control",placeholder:"0000000" %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= f.text_field :address, class: "form-control",placeholder:"東京都渋谷区代々木神園町0-0" %></td>
  </tr>
  <tr>
    <td>宛名</td>
    <td><%= f.text_field :name, class:"form-control",placeholder:"令和道子" %></td>
    <td><%= f.submit "新規登録", class: "btn btn-secondary" %></td>
  </tr>
</table>
<% end %>

<% @addresses.each do |address| %>
<table>
  <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
  </tr>
  <tr>
    <td><%= address.postal_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td><%= link_to "編集する", edit_address_path(address.id) %></td>
    <td><%= link_to "削除する", address_path(address.id),method: :delete %></td>
  </tr>
</table>
<% end %>