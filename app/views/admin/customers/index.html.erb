<h2>会員一覧</h2>
<% @customers.each do |customer| %> 
<table>
  <tr>
    <th>
      会員ID
    </th>
    <th>
      氏名
    </th>
    <th>
      メールアドレス
    </th>
    <th>
      ステータス
    </th>
  </tr>
  <tr>
    <td>
      <%= customer.id %>
    </td>
    <td>
      <%= link_to "#{customer.first_name} #{customer.last_name}", admin_customer_path(customer.id) %>
    </td>
    <td>
      <%= customer.email %>
    </td>
    <td>
      <% if customer.is_active? %>
        有効
      <% else %>
        退会
      <% end %>
    </td>
  </tr>
</table>
<% end %>
<%= paginate @customers %>