<h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h2>
<%= form_with model: @customer, url:admin_customer_path(@customer.id) do |f| %>
<table>
  <tr>
    <td>会員ID</td>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <td>氏名</td>
    <td><%= f.text_field :first_name, class: "form-control book_title" %></td>
    <td><%= f.text_field :last_name, class: "form-control book_title" %></td>
  </tr>
  <tr>
    <td>フリガナ</td>
    <td><%= f.text_field :first_name_kana, class: "form-control book_title" %></td>
    <td><%= f.text_field :last_name_kana, class: "form-control book_title" %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= f.text_field :postal_code, class: "form-control book_title" %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= f.text_field :address, class: "form-control book_title" %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= f.text_field :telephone_number, class: "form-control book_title" %></td><
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= f.text_field :email, class: "form-control book_title" %></td>
  </tr>
  <tr>
    <td>会員ステータス</td>
    <td>
      <%= f.radio_button :is_active, "true" %>
      <%= f.label :is_active_true, "有効" %>
      <%= f.radio_button :is_active, "false" %>
      <%= f.label :is_active_false, "退会" %>
    </td>
  </tr>
</table>
<%= f.submit "変更を保存", class: "btn btn-secondary" %>
<% end %>
